<!DOCTYPE html>
<html lang="es">

<head>
    <%-
         include("headers")
    %>
</head>

<body>
    <header>
        <%-
            include("headerLogged");
        %>
    </header>

    <%-
    include("busqueda");
    %>


    <div id="boxPerfil">
        <div id="boxSuperior">
            <div id="boxUsuario">
                <img src="/imagen/<%- usuario.FotoPerfil %>">
            </div>

            <div id="boxEstadistica">
                <div id="boxTextEstadisticas">
                    <p id="text_estadisticas">ESTADISTICAS</p>
                </div>
                <div id="boxReputacion" style="display:flex">
                    <div id="boxPreguntas">
                        <p>Preguntas</p>
                    </div>
                    <div id="boxRepu">
                        <p>Reputacion</p>
                        <%- usuario.Reputacion %>
                    </div>
                    <div id="boxRespuestas">
                        <p>Respuestas</p>
                    </div>
                </div>

            </div>

        </div>
        <div id="boxInferior">
            <div id="boxTextMedallas">
                <p id="text_medallas">MEDALLAS</p>
            </div>

            <div id="boxMedallas" style="display:flex">
                <div id="boxBronce">
                    <p>BRONCE</p>
                </div>
                <div id="boxPlata">
                    <p>PLATA</p>
                </div>
                <div id="boxOro">
                    <p>ORO</p>
                </div>

            </div>

        </div>
    </div>
</body>

</html>