<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("headers") %>
</head>

<body>
    <header>
        <%- include("headerLogged"); %>
    </header>

    <%- include("busqueda"); %>


        <div id="boxPerfil">
            <div id="boxSuperior">
                <div id="boxUsuario">
                    <img src="/imagen/<%- usuario.FotoPerfil %>">
                    <h2>
                        <%- usuario.Nombre %>
                    </h2>
                    <h2>Miembro desde: <%- usuario.FechaAlta.getDate()+"/"+
                            (usuario.FechaAlta.getMonth() + 1) +"/"+usuario.FechaAlta.getFullYear() %>
                    </h2>
                </div>

                <div id="boxEstadistica">
                    <div id="boxTextEstadisticas">
                        <p id="text_estadisticas">ESTADÍSTICAS</p>
                    </div>
                    <div id="boxReputacion" style="display:flex">
                        <div id="boxPreguntas">
                            <h2>Preguntas</h2>
                            <p class="datos">
                                <%- numeroPreguntas %>
                            </p>
                        </div>
                        <div id="boxRepu">
                            <h2>Reputación</h2>
                            <p class="datos">
                                <%- usuario.Reputacion %>
                            </p>
                        </div>
                        <div id="boxRespuestas">
                            <h2>Respuestas</h2>
                            <p class="datos">
                                <%- numeroRespuestas %>
                            </p>
                        </div>
                    </div>

                </div>

            </div>
            <div id="boxInferior">
                <div id="boxTextMedallas">
                    <p id="text_medallas">MEDALLAS</p>
                </div>

                <div id="boxMedallas" style="display:flex">
                    <div id="boxBronce">
                        <p>BRONCE: <%= todoMedallas.contBronce%></p>
                        <%
                        for(let i=0; i < todoMedallas.medallas.length; ++i){ if(todoMedallas.medallas[i].Metal=="bronce" ){ %>
                            <div class=medallas>
                                <div class="circuloBronce"></div>
                                <%=todoMedallas.medallas[i].Nombre%>
                                <%if(todoMedallas.medallas[i].num >1){%>
                                    <label>x</label>  <%=todoMedallas.medallas[i].num%>
                                <%}%>
                            </div>
                        <%}}%>
                    </div>
                    <div id="boxPlata">
                        <p>PLATA: <%= todoMedallas.contPlata%></p>
                        <%
                        for(let i=0; i < todoMedallas.medallas.length; ++i){ if(todoMedallas.medallas[i].Metal=="plata" ){ %>
                            <div class=medallas>
                                <div class="circuloPlata"></div>
                                <%=todoMedallas.medallas[i].Nombre%>
                                <%if(todoMedallas.medallas[i].num >1){%>
                                    <label>x</label>  <%=todoMedallas.medallas[i].num%>
                                <%}%>
                            </div>
                        <%}}%>
                    </div>
                    <div id="boxOro">
                        <p>ORO: <%= todoMedallas.contOro%></p>
                        <%
                        for(let i=0; i < todoMedallas.medallas.length; ++i){ if(todoMedallas.medallas[i].Metal=="oro" ){ %>
                            <div class=medallas>
                                <div class="circuloOro"></div>
                                <%=todoMedallas.medallas[i].Nombre%>
                                <%if(todoMedallas.medallas[i].num >1){%>
                                    <label>x</label>  <%=todoMedallas.medallas[i].num%>
                                <%}%>
                            </div>
                        <%}}%>
                    </div>

                </div>

            </div>
        </div>
</body>

</html>